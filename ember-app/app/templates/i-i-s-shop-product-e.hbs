<h3 class="ui header">{{t "forms.i-i-s-shop-product-e.caption"}}
  {{#unless model.isNew}}
    â„–
    {{model.productCode}}
  {{/unless}}
</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>

  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.name
      class=(if (v-get validationObject "name" "isInvalid") "error")
      label=(t "forms.i-i-s-shop-product-e.name-caption")
    }}
    {{flexberry-validationmessage
      error=(v-get validationObject "name" "messages")
    }}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.measure
      class=(if (v-get validationObject "measure" "isInvalid") "error")
      label=(t "forms.i-i-s-shop-product-e.measure-caption")
    }}
    {{flexberry-validationmessage
      error=(v-get validationObject "measure" "messages")
    }}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.description
      class=(if (v-get validationObject "description" "isInvalid") "error")
      label=(t "forms.i-i-s-shop-product-e.description-caption")
    }}
    {{flexberry-validationmessage
      error=(v-get validationObject "description" "messages")
    }}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.price
      class=(if (v-get validationObject "price" "isInvalid") "error")
      label=(t "forms.i-i-s-shop-product-e.price-caption")
    }}
    {{flexberry-validationmessage
      error=(v-get validationObject "price" "messages")
    }}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.weight
      class=(if (v-get validationObject "weight" "isInvalid") "error")
      label=(t "forms.i-i-s-shop-product-e.weight-caption")
    }}
    {{flexberry-validationmessage
      error=(v-get validationObject "weight" "messages")
    }}
  </div>
</form>